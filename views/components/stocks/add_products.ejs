<div id="add_produt" class="bg-gray-200 relative w-80 p-4 items-center justify-center flex flex-col shadow-lg z-50">
    <button type="button" class="absolute top-2 left-2 text-2xl text-yellow-400" onclick="close_add_product();"><i class="fa-solid fa-rectangle-xmark" id="closeConnexion"></i></button>
    <h3 class="font-medium m-2">Ajouter un produit</h3>
    <form id="" class="w-full">
        <input type="text" name="nom_produit" id="nom_produit" placeholder="Nom du produit" class="w-full rounded-3xl p-2 px-4 border-2 border-solid border-black border-opacity-10 mb-3 shadow-lg focus:outline-none focus:ring-2 focus:ring-bg-yellow-400 focus:ring-opacity-50">
        <select name="" id="" aria-placeholder="Type de produit" class="w-full rounded-3xl p-2 px-4 border-2 border-solid border-black border-opacity-10 mb-3 shadow-lg focus:outline-none focus:ring-2 focus:ring-bg-yellow-400 focus:ring-opacity-50">
            <option value="engrais">engrais</option>
            <option value="semences">semences</option>
            <option value="pesticides">pesticides</option>
            <option value="matériels">matériels</option>
        </select>
        <input type="number" name="quantite" id="quantite" placeholder="Quantité" class="w-full rounded-3xl p-2 px-4 border-2 border-solid border-black border-opacity-10 mb-3 shadow-lg focus:outline-none focus:ring-2 focus:ring-bg-yellow-400 focus:ring-opacity-50">
